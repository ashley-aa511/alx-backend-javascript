// 0-calcul.test.js
const assert = require('assert');
const calculateNumber = require('./0-calcul');

describe('calculateNumber', () => {
    it('should return the correct sum of rounded numbers', () => {
        assert.strictEqual(calculateNumber(1, 3), 4);       // 1 + 3 = 4
        assert.strictEqual(calculateNumber(1, 3.7), 5);     // 1 + 4 = 5 (3.7 rounds to 4)
        assert.strictEqual(calculateNumber(1.2, 3.7), 5);   // 1 + 4 = 5 (1.2 rounds to 1 and 3.7 to 4)
        assert.strictEqual(calculateNumber(1.5, 3.7), 6);   // 2 + 4 = 6 (1.5 rounds to 2)
        assert.strictEqual(calculateNumber(1.5, 2.5), 5);   // 2 + 3 = 5 (both round up)
        assert.strictEqual(calculateNumber(-1.5, 1.5), 0);  // -2 + 2 = 0 (rounding -1.5 down)
        assert.strictEqual(calculateNumber(0.9, 0.1), 1);   // 1 + 0 = 1 (both round to 1 and 0)
        assert.strictEqual(calculateNumber(-0.5, -1.5), -2); // -1 + -2 = -3 (rounding)
    });

    it('should handle edge cases correctly', () => {
        assert.strictEqual(calculateNumber(0, 0), 0); // 0 + 0 = 0
        assert.strictEqual(calculateNumber(2.4, 2.4), 5); // 2 + 3 = 5 (both round down)
    });
});
